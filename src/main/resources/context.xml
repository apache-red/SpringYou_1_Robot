<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="t1000" class="com.redline.red.spring.impls.robot.ModelT1000">
        <!--<constructor-arg ref="sonyHand"/>-->
        <!--<constructor-arg ref="sonyLeg"/>-->
        <!--<constructor-arg ref="sonyHead"/>-->
        <!--// очередность важна или index выставить. Соответствие типов тоже или type=-->
        <constructor-arg value="silver" index="0" type="java.lang.String"/>
        <constructor-arg value="2006" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>
        <property name="hand" ref="toshibaHand"/>
        <property name="leg" ref="toshibaLeg"/>
        <property name="head" ref="toshibaHead"/>

    </bean>

    <bean id="t2000" class="com.redline.red.spring.impls.robot.ModelT1000"
          p:hand-ref="toshibaHand"
          p:leg-ref="toshibaLeg"
          p:head-ref="toshibaHead"
    >

        <!--<constructor-arg ref="toshibaHand"/>-->
        <!--<constructor-arg ref="toshibaLeg"/>-->
        <!--<constructor-arg ref="toshibaHead"/>-->
    </bean>

    <bean id="t1000Empty" class="com.redline.red.spring.impls.robot.ModelT1000">
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
        <constructor-arg ref="sonyHead"/>
    </bean>


    <bean id="sonyHand" class="com.redline.red.spring.impls.sony.SonyHand"/>
    <bean id="sonyHead" class="com.redline.red.spring.impls.sony.SonyHead"/>
    <bean id="sonyLeg" class="com.redline.red.spring.impls.sony.SonyLeg"/>

    <bean id="toshibaHand" class="com.redline.red.spring.impls.toshiba.ToshibaHand"/>
    <bean id="toshibaHead" class="com.redline.red.spring.impls.toshiba.ToshibaHead"/>
    <bean id="toshibaLeg" class="com.redline.red.spring.impls.toshiba.ToshibaLeg"/>


</beans>
